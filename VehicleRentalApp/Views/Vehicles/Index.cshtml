@model List<VehicleRentalApp.ViewModels.VehicleItemViewModel>

@{
    ViewData["Title"] = "Lista Pojazdów";
}

<h2>Nasze pojazdy</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Brand" />
                <div class="card-body">
                    <h5 class="card-title">@item.Brand @item.Name</h5>
                    <p class="card-text">Typ: @item.Type</p>
                    <p class="card-text"><strong>@item.PricePerDay zł</strong>/dzień</p>
                    <a href="@Url.Action("Details", "Vehicles", new { id = item.Id })" class="btn btn-primary">Szczegóły</a>
                </div>
            </div>
        </div>
    }
</div>
