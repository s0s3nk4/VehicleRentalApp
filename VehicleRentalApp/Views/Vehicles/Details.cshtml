@model VehicleRentalApp.ViewModels.VehicleDetailViewModel

@{
    ViewData["Title"] = "Szczegóły pojazdu";
}

<h2>@Model.Brand @Model.Model (@Model.Year)</h2>

<div class="row mt-4">
    <div class="col-md-6">
        <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Brand" />
    </div>
    <div class="col-md-6">
        <p><strong>Typ:</strong> @Model.Type</p>
        <p><strong>Opis:</strong> @Model.Description</p>
        <p><strong>Cena za dzień:</strong> @Model.PricePerDay zł</p>
        <a href="@Url.Action("Index", "Vehicles")" class="btn btn-secondary mt-3">Powrót do listy</a>
    </div>
</div>
